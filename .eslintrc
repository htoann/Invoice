{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "prettier",
    "plugin:react-hooks/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "import", "react-hooks", "prettier"],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@", "./src"],
          ["@/components", "./src/components"],
          ["@/config", "./src/config"],
          ["@/container", "./src/container"],
          ["@/demoData", "./src/demoData"],
          ["@/i18n", "./src/i18n"],
          ["@/layout", "./src/layout"],
          ["@/pages", "./src/pages"],
          ["@/redux", "./src/redux"],
          ["@/routes", "./src/routes"],
          ["@/static", "./src/static"],
          ["@/utils", "./src/utils"],
          ["@/mock", "./src/mock"]
        ],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
    "prettier/prettier": "error",
    "react-hooks/exhaustive-deps": 0
  },
  "overrides": [
    {
      "files": ["*.jsx"],
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ]
}
